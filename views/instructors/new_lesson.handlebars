<h2>Add Lesson</h2>

<form id="regForm" method="post" action="/instructors/lessons/new/{{class_id}}">
	<div>
		<label>Lesson Number: </label>
		<input type="text" name="lesson_number">
	</div>
	<br/>
	<div>
		<label>Lesson Title: </label>
		<input type="text" name="lesson_title">
	</div>
	<br/>
	<div>
		<label>Lesson Description: </label>
		<textarea name="lesson_desc"></textarea>
	</div>
	<br/>
	<div>
		<input type="submit" value="Add Lesson">
	</div>
</form>